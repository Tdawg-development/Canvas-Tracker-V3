# Canvas Tracker V3 - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/canvas_tracker_v3
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=canvas_tracker_v3
DATABASE_USER=canvas_user
DATABASE_PASSWORD=your_secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Canvas API Configuration
CANVAS_URL=https://your-institution.instructure.com
CANVAS_TOKEN=your_canvas_api_token
# Canvas Free for Teachers: 600 requests/hour, heavy penalties for exceeding
CANVAS_RATE_LIMIT_REQUESTS_PER_HOUR=600
CANVAS_ACCOUNT_TYPE=free
CANVAS_MAX_CONCURRENT_REQUESTS=4
CANVAS_BATCH_SIZE_LIMIT=8

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/canvas-tracker.log

# Security
JWT_SECRET=your_jwt_secret_key_here
CORS_ORIGIN=http://localhost:3001

# External Services
HEALTH_CHECK_TIMEOUT=5000

# Development/Testing
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/canvas_tracker_test
MOCK_CANVAS_API=false